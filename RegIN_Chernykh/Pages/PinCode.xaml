<Page x:Class="RegIN.Pages.PinCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PinCode">

    <Grid Background="White">
        <Border  BorderThickness="2" CornerRadius="10" 
                Width="350" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="20">
                <Label Content="Enter your 4-digit Pin Code:" 
                       FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <Label x:Name="LPinCode" HorizontalAlignment="Center" 
                       FontSize="12" Foreground="Red" Margin="0,0,0,10"/>

                <PasswordBox x:Name="TbPinCode" Height="30" Width="200" 
                            HorizontalAlignment="Center" Margin="0,0,0,15"
                            KeyUp="SetPinCode"/>
                <TextBlock Text="Back" Foreground="#FF673AB7" FontSize="12" 
                          HorizontalAlignment="Center" Cursor="Hand">
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding OpenLoginCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>